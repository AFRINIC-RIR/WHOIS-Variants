<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                           http://camel.apache.org/schema/spring
                           http://camel.apache.org/schema/spring/camel-spring.xsd">

    <import resource="classpath*:/whois-core-context.xml"/>

    <camelContext xmlns="http://camel.apache.org/schema/spring">
        <!-- TCP Socket -->
        <route id="query">
            <from uri="mina2:tcp://localhost:4443?textline=true&amp;disconnect=true"/>
            <setHeader headerName="command">
                <constant>query</constant>
            </setHeader>
            <bean ref="WhoisService" method="messageReceived"/>
            <to uri="velocity:whois-query.vm"/>
        </route>
        <route id="update">
            <from uri="mina2:tcp://localhost:4444?codec=#MultilineTextCodecFactory&amp;disconnect=true"/>
            <setHeader headerName="command">
                <constant>update</constant>
            </setHeader>
            <bean ref="WhoisService" method="messageReceived"/>
            <to uri="velocity:whois-query.vm"/>
        </route>
        <route id="delete">
            <from uri="mina2:tcp://localhost:4445?textline=true&amp;disconnect=true"/>
            <setHeader headerName="command">
                <constant>delete</constant>
            </setHeader>
            <bean ref="WhoisService" method="messageReceived"/>
            <to uri="velocity:whois-query.vm"/>
        </route>

        <!-- REST -->
        <route id="restlet-query-convert">
            <from uri="restlet:http://localhost:4480/{id}/{format}?restletMethod=GET"/>
            <transform>
                <simple>${header.id}</simple>
            </transform>
            <setHeader headerName="command">
                <constant>query</constant>
            </setHeader>
            <bean ref="WhoisService" method="messageReceived"/>
            <setHeader headerName="conversion">
                <simple>rpsl2${header.format}</simple>
            </setHeader>
            <bean ref="TextConvertService" method="messageReceived"/>
            <to uri="log:whois.core.api.QueryCommand?level=INFO&amp;multiline=true&amp;skipBodyLineSeparator=false"/>
            <to uri="velocity:whois-query.vm"/>
        </route>
        <route id="restlet-query">
            <from uri="restlet:http://localhost:4480/{id}?restletMethod=GET"/>
            <transform>
                <simple>${header.id}</simple>
            </transform>
            <setHeader headerName="command">
                <constant>query</constant>
            </setHeader>
            <bean ref="WhoisService" method="messageReceived"/>
            <to uri="log:whois.core.api.QueryCommand?level=INFO&amp;multiline=true&amp;skipBodyLineSeparator=false"/>
            <to uri="velocity:whois-query.vm"/>
        </route>
        <route id="restlet-update">
            <from uri="restlet:http://localhost:4480/?restletMethods=POST,PUT"/>
            <setHeader headerName="command">
                <constant>update</constant>
            </setHeader>
            <bean ref="WhoisService" method="messageReceived"/>
            <to uri="log:whois.core.api.UpdateCommand?level=INFO&amp;multiline=true&amp;skipBodyLineSeparator=false"/>
            <to uri="velocity:whois-query.vm"/>
        </route>
        <route id="restlet-delete">
            <from uri="restlet:http://localhost:4480/{id}?restletMethod=DELETE"/>
            <transform>
                <simple>${header.id}</simple>
            </transform>
            <to uri="log:whois.core.api.DeleteCommand?level=INFO"/>
            <setHeader headerName="command">
                <constant>delete</constant>
            </setHeader>
            <bean ref="WhoisService" method="messageReceived"/>
            <to uri="log:whois.core.api.DeleteCommand?level=INFO&amp;multiline=true&amp;skipBodyLineSeparator=false"/>
            <to uri="velocity:whois-query.vm"/>
        </route>

        <!-- WebSocket -->
        <route id="quartz-update">
            <from uri="quartz2://myGroup/myTimerName?cron=0 0/1 * * * ? *"/>
            <transform>
                <constant>a:b</constant>
            </transform>
            <setHeader headerName="command">
                <constant>query</constant>
            </setHeader>
            <bean ref="WhoisService" method="messageReceived"/>
            <to uri="log:whois.core.api.QueryCommand?level=INFO&amp;multiline=true&amp;skipBodyLineSeparator=false"/>
            <setHeader headerName="conversion">
                <constant>rpsl2html</constant>
            </setHeader>
            <bean ref="TextConvertService" method="messageReceived"/>
            <to uri="websocket://localhost:9292/whois?sendToAll=true"/>
        </route>

